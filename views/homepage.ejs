            },300);
            setTimeout(function(){
                audio.pause();
                $('#streamSrc').attr('src',newSong.streamUrl);
                $('#nowPlaying').html('\
                    <span id="songNameH">'+newSong.songName+'</span>\
                    <span id="artistNameH">'+newSong.artistName+'</span>\
                ');
                $("#albumArt").attr("src",newSong.coverUrl);
                audio.load();
                setTimeout(function(){
                    $('#nowPlaying').animate({
                        opacity: 1,
                        marginLeft: '0'
                    },300);
                    $('#albumArt').animate({
